<div class="container p-4">
    <div class="row mt-2">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                <h3>Listado de ventas</h3>
            </div>
            <div class="col-md-6 col-lg-6">
                <a href="/ventas/crear" class="btn btn-outline-success float-end" role="button" aria-pressed="true">
                    <i class="fas fa-plus"></i> Crear Venta
                </a>
            </div>
        </div>
        <div class="col-sm-12 mt-3">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control" placeholder="Buscar" aria-label="Buscar"
                    aria-describedby="basic-addon1">
            </div>
        </div>
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id Cliente</th>
                    <th scope="col">Nombre Cliente</th>
                    <th scope="col">Fecha Venta</th>
                    <th scope="col">Encargado</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#if ventas}}
                {{#each ventas}}
                <tr>
                    <td>{{@key}}</td>
                    <td>{{idCliente}}</td>
                    <td>{{cliente}}</td>
                    <td>{{fecha}}</td>
                    <td>{{encargado}}</td>
                    <td>
                        <a href="/ventas/editar/{{@key}}" class="btn btn-outline-info" role="button" aria-pressed="true">
                            <i class="far fa-edit"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
    </div>
</div>