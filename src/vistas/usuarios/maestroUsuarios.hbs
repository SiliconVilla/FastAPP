<div class="container p-4">
    <div class="row mt-2">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                <h3>Listado de usuarios</h3>
            </div>
            <div class="col-md-6 col-lg-6">
                <a href="/usuarios/crear" class="btn btn-outline-success float-end" role="button" aria-pressed="true">
                    <i class="fas fa-plus"></i> Crear Usuario
                </a>
            </div>
        </div>
        <div class="col-sm-12 mt-3">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control" placeholder="Buscar" aria-label="Buscar"
                    aria-describedby="basic-addon1">
            </div>
        </div>
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acci√≥n</th>
                </tr>
            </thead>
            <tbody>
                {{#if usuarios}}
                {{#each usuarios}}
                <tr>
                    <td>{{@key}}</td>
                    <td>{{nombre}}</td>
                    <td>{{rol}}</td>
                    <td>{{estado}}</td>
                    <td>
                        <a href="#" class="btn btn-outline-info" role="button" aria-pressed="true">
                            <i class="far fa-edit"></i>
                        </a>
                        <a href="#" class="btn btn-outline-danger" role="button" aria-pressed="true">
                            <i class="fa fa-trash-o fa-lg"></i>
                        </a>
                      {{!--   <a href="/activarProducto/{{@key}}" class="btn btn-danger form-control">Activar</a> --}}
                    </td>
                </tr>
                {{/each}}
                {{/if}}
            </tbody>
        </table>
    </div>
</div>