<div class="container p-4">
    <div class="row mt-2">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                <h3>Editar Producto {{id}}</h3>
            </div>
        </div>
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/productos">Listar Productos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar Producto</li>
            </ol>
        </nav>
        <div class="col-md-12 p-2">
            {{#if producto}}
            <form action="/editarProductos/{{id}}" method="POST">
                <div class="form-group p-1">
                    <input type="text" name="nombre" required value="{{producto.nombre}}" placeholder="Nombre"
                        class="form-control" autofocus>
                </div>
                <div class="form-group p-1">
                    <textarea class="form-control" required name="descripcion" placeholder="DescripciÃ³n" >{{producto.descripcion}}</textarea>
                </div>
                <div class="form-group p-1">
                    <input type="number" name="precio" required value="{{producto.precio}}" placeholder="Precio"
                        class="form-control">
                </div>
                <div class="form-group p-1">
                    <input type="text" name="imagen" required value="{{producto.imagen}}" placeholder="Imagen"
                        class="form-control">
                </div>
                <div class="col-md-4 offset-md-4 py-2">
                    <button class="btn btn-primary form-control">
                        Editar
                    </button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>