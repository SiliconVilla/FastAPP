<div class="container p-4">
    <div class="row">
        
        <div class="col-md-4 p-2">
            <div class="card text-center">
                <div class="card-body">
                    Editar Producto {{id}}
                </div>
                <div class="card-footer">
                    {{#if producto}}
                        <form action="/editarProductos/{{id}}" method="POST">
                            <div class="form-group p-1">
                                <input type="text" name="nombre" value="{{producto.nombre}}" placeholder="Nombre del producto"
                                    class="form-control" autofocus>
                            </div>
                            
                            <div class="form-group p-1">
                                <input type="text" name="descripcion" value="{{producto.descripcion}}" placeholder="DescripciÃ³n del producto"
                                    class="form-control">
                            </div>
                            <div class="form-group p-1">
                                <input type="number" name="precio" value="{{producto.precio}}" placeholder="Precio del producto"
                                    class="form-control">
                            </div>
                            <div class="form-group p-1">
                                <input type="text" name="imagen" value="{{producto.imagen}}" placeholder="Imagen del producto"
                                    class="form-control">
                            </div>
                            <div class="form-group p-1">
                                <button class="btn btn-primary form-control">
                                    Registrar
                                </button>
                            </div>
                        </form>
                    {{/if}}
                    
                </div>
            </div>
        </div>
    </div>
</div>